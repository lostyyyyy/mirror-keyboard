<body>
  <h1>Keyboard Mirror Encoder / Decoder</h1>
  <textarea id="inputText" placeholder="Type your text here..."></textarea>
  <div>
    <button onclick="encodeText()">Encode</button>
    <button onclick="decodeText()">Decode</button>
  </div>
  <textarea id="outputText" placeholder="Output will appear here..."></textarea>

  <script>
    const mapping = (() => {
      const rows = [
        ["q","w","e","r","t","y","u","i","o","p"],
        ["a","s","d","f","g","h","j","k","l"],
        ["z","x","c","v","b","n","m"]
      ];
      let map = {};
      rows.forEach(row => {
        const mid = Math.floor(row.length / 2);
        for (let i = 0; i < row.length; i++) {
          let mirror = row[row.length - 1 - i];
          // special case for G and V (stay same)
          if ((row[i] === "g" || row[i] === "v")) {
            map[row[i]] = row[i];
          } else {
            map[row[i]] = mirror;
          }
        }
      });
      return map;
    })();

    function transform(text) {
      return text.split("").map(ch => {
        let lower = ch.toLowerCase();
        if (mapping[lower]) {
          let mirrored = mapping[lower];
          return (ch === ch.toUpperCase()) ? mirrored.toUpperCase() : mirrored;
        }
        return ch;
      }).join("");
    }

    function encodeText() {
      const input = document.getElementById("inputText").value;
      document.getElementById("outputText").value = transform(input);
    }

    function decodeText() {
      // decoding is same as encoding (symmetrical mapping)
      const input = document.getElementById("inputText").value;
      document.getElementById("outputText").value = transform(input);
    }
  </script>
</body>
